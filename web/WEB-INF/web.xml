<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!--servlet基本配置-->
    <servlet>
        <!--servlet名字-->
        <servlet-name>hello</servlet-name>
        <!--Java类全名-->
        <servlet-class>com.company.HelloWorldController</servlet-class>
    </servlet>
    <!--访问地址配置-->
    <servlet-mapping>
        <!--servlet的名字，与上面的名字相同-->
        <servlet-name>hello</servlet-name>
        <!--浏览器访问地址，要以/开头 -->
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <!--login-->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.company.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--helloWorld-->
    <servlet>
        <servlet-name>helloWorld</servlet-name>
        <servlet-class>com.company.HelloWorld</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>helloWorld</servlet-name>
        <url-pattern>/helloWorld</url-pattern>
    </servlet-mapping>

    <!--helloForm-->
    <!--<servlet>
        <servlet-name>helloForm</servlet-name>
        <servlet-class>com.company.HelloForm</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>helloForm</servlet-name>
        <url-pattern>/helloForm</url-pattern>
    </servlet-mapping>-->

    <!--checkbox-->
    <servlet>
        <servlet-name>checkbox</servlet-name>
        <servlet-class>com.company.CheckBox</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkbox</servlet-name>
        <url-pattern>/checkbox</url-pattern>
    </servlet-mapping>

    <!--status code-->
    <servlet>
        <servlet-name>statusCode</servlet-name>
        <servlet-class>com.company.StatusCode</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>statusCode</servlet-name>
        <url-pattern>/statusCode</url-pattern>
    </servlet-mapping>

    <!--database demo-->
    <servlet>
        <servlet-name>databaseAccess</servlet-name>
        <servlet-class>com.company.DatabaseAccess</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>databaseAccess</servlet-name>
        <url-pattern>/databaseAccess</url-pattern>
    </servlet-mapping>

    <!--upload demo-->
    <servlet>
        <display-name>upload</display-name>
        <servlet-name>upload</servlet-name>
        <servlet-class>com.company.Upload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <!--Error start-->
    <!--servlet 定义-->
    <servlet>
        <servlet-name>ErrorHandler</servlet-name>
        <servlet-class>ErrorHandler</servlet-class>
    </servlet>

    <!--servlet 映射-->
    <servlet-mapping>
        <servlet-name>ErrorHandler</servlet-name>
        <url-pattern>/errorHandler</url-pattern>
    </servlet-mapping>

    <!--error-code 相关页面-->
    <error-page>
        <error-code>404</error-code>
        <location>/errorHandler</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/errorHandler</location>
    </error-page>

    <!--exception-type 相关页面-->
    <error-page>
        <exception-type>javax.servlet.ServletException</exception-type>
        <location>/errorHandler</location>
    </error-page>
    <error-page>
        <exception-type>java.io.IOException</exception-type>
        <location>/errorHandler</location>
    </error-page>
    <!--Error end-->
</web-app>